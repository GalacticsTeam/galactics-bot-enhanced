{
  "ts-node": {
    "files": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "strictNullChecks": false,
    "target": "es5",
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@botConfig": ["./src/utils/botConfig.ts"],
      "@utils/*": ["./src/utils/*"],
      "@actions/*": ["./src/actions/*"],
      "@actionHandlers/*": ["./src/actionHandlers/*"]
    },
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "downlevelIteration": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/"]
}
